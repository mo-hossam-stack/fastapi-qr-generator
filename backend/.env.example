# API Configuration
PROJECT_NAME="QR Code Generator API"
ENVIRONMENT=development
DEBUG=True

# Security
JWT_SECRET_KEY=yoursecretkeyhere
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/qrg_db

# Redis
REDIS_URL=redis://redis:6379/0

# Storage
STORAGE_TYPE=local  # local or s3
STORAGE_ROOT_DIR=./storage
S3_BUCKET_NAME=qr-codes
S3_ENDPOINT_URL=http://minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT_LIMIT=100
RATELIMIT_WINDOW=3600
